        <label class="control-label">RELACION DE HECHOS CONSTITUTIVOS DE LA QUEJA</label>
        <hr />
        <label>@Html.DisplayFor(model => model.ParrafoHechos)</label>

        <hr />
        <h6 class="text-center">(De ser necesario el Comite podra solicitarle porteriormente la ampliacion de la informacion ofrecida)</h6>
        <hr />

        <label class="control-label">¿CUENTA USTED CON PRUEBAS?</label>
        <hr />
        <label>@Html.DisplayFor(model => model.Prueba)</label>

        <div class="form-group">
            <a asp-action="Index" class="btn btn-dark">Regresar</a>
        </div>
    </div>

</form>



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
